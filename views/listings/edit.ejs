<%layout("/layouts/boilerplate")%>
<body>
    <h2>Edit Detais</h2>
    <form method="post" action="/listings/<%=list._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%=list.title%>" type="text" class="form-control" id="title" required/>
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">Title is Required</div>
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"  rows="12" cols="30" class="form-control" id="description" required><%=list.description%></textarea>
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">Description is Required</div>
        </div>
        <div>
            Original Image
            <br>
            <img src="<%=neworiginalimage%>">
        </div>
        <div>
            <label for="image" class="form-label">Upload new Image</label>
            <input name="listing[image]"  type="file" class="form-control" id="image"/>
        </div>
        <div>
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" value="<%=list.price%>" type="number" class="form-control" id="price" required>
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">Price is Required</div>
        </div>
        <div>
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" value="<%=list.location%>" type="text" class="form-control" id="location" required/>
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">Location is Required</div>
        </div>
        <div>
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" value="<%=list.country%>" type="text" class="form-control" id="country" required/>
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">Country is Required</div>
        </div>
        <br>
        <div>
            <label for="category" class="form-label">Category</label>
            <select name="listing[category]" class="form-select" required>
                <option value="">Select Category</option>
                <option value="Trending">Trending</option>
                <option value="Arctic">Arctic</option>
                <option value="Iconic Cities">Iconic Cities</option>
                <option value="Amazing Pools">Amazing Pools</option>
                <option value="Mountains">Mountains</option>
                <option value="Beaches">Beaches</option>
                <option value="Farms">Farms</option>
                <option value="Rooms">Rooms</option>
                <option value="Royal Villa">Royal Villa</option>
                <option value="Arctic">Arctic</option>
            </select>
            <div class="valid-feedback">Ok</div>
            <div class="invalid-feedback">Category is Required</div>
        </div>
        <br>
        <button class="btn btn-secondary">Edit</button>
    </form>
    <script src="/js/script.js"></script>
</body>
</html>